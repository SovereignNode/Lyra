{{!< ../default}}

<header class="site-header">
    {{> site-header}}
</header>
<main id="site-main" class="site-main site-signup outer">
    <div class="inner">

    {{#if @member.paid}}

        {{!-- Logged in, paying member: Redirect home --}}
        <script>window.location = '{{@site.url}}';</script>

    {{else if @member}}

        {{!-- Logged in, not paying: Check out --}}
        <div class="checkout-form">
            <h1 class="checkout-title">{{t "Choose your subscription"}}</h1>
            <p>{{t "Unlock full access to {blogtitle} and see the entire library of members-only content & updates" blogtitle=@site.title}}</p>
            <p></p>
            <p><a href='/pakketten/'>Klik hier</a> voor meer informatie.</p>
            <div class="checkout-box">
                <div class="checkout-plan">
                    <header class="checkout-plan-header">
                        <h3>{{t "Monthly"}}</h3>
                        <span>$</span><strong>{{@price.monthly}}</strong>{{t " / month"}}
                    </header>
                    <div class="checkout-plan-content">
                        <ul>
                            <li>{{t "Full access to all private posts"}}</li>
                            <li>{{t "Regular updates with new content"}}</li>
                            <li>{{t "Access to the ultimate startersguide"}}</li>
                            <li>{{t "Coaching"}}</li>
                            <li>{{t "Korting workshops"}}</li>
                        </ul>
                        <a class="button primary fit" href="javascript:" data-members-plan="Monthly">{{t "Choose this plan"}}</a>
                    </div>
                </div>
                <div class="checkout-plan">
                    <header class="checkout-plan-header">
                        <h3>{{t "Yearly"}}</h3>
                        <span>$</span><strong>{{@price.yearly}}</strong>{{t " / year"}}
                    </header>
                    <div class="checkout-plan-content">
                        <ul>
                            <li>{{t "Full access to all private posts"}}</li>
                            <li>{{t "Regular updates with new content"}}</li>
                            <li>{{t "Access to the ultimate startersguide"}}</li>
                            <li>{{t "Coaching"}}</li>
                            <li>{{{t "Gratis workshops"}}}</li>
                            <li>{{t "One easy payment instead of 12!"}}</li>
                        </ul>
                        <a class="button primary fit" href="javascript:" data-members-plan="Yearly">{{t "Choose this plan"}}</a>
                    </div>
                </div>
            </div>
        </div>

    {{else}}

        {{!-- Not logged in: Sign up --}}
        <form class="signup-form" data-members-form="signup">
            <h1 class="signup-title">{{t "Signup to {blogtitle}" blogtitle=@site.title}}</h1>
            <p>{{@site.description}}</p>
            <br> </br>
            <p>Schrijf je hier in om op de hoogte te blijven van nieuwe artikels. Daarnaast kan je lid worden om toegang te krijgen tot veel meer!</p>
            <div class="signup-box">
                <input data-members-email type="email" placeholder="Jouw e-mailadres..." required="true" autocomplete="false" />
                <button class="button primary" type="submit">
                    <span class="button-content">{{t "Continue"}}</span>
                    <span class="button-loader">{{> "icons/loader"}}</span>
                </button>
            </div>
            <p><small>{{t "Already have an account? "}} <a href="/signin/">{{t "Sign in"}}</a></small></p>
            <div class="message-success"><strong>{{t "Great!"}}</strong> {{t "Check your inbox and click the link to confirm your subscription"}}</div>
            <div class="message-error">{{t "Please enter a valid email address!"}}</div>
        </form>

    {{/if}}

    </div>
</main>
